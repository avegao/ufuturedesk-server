{% extends 'AdminBundle:Default:admin.html.twig' %}

{% block title %}{{ parent() }} Crear profesor{% endblock %}

{% block article %}
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_index') }}">Inicio</a></li>
        <li><a href="{{ path('admin_teacher_index') }}">Profesores</a></li>
        <li class="active">Crear profesor</li>
    </ol>
    {{ form_start(teacherForm,
        {
            'action':  path('admin_teacher_create'),
            'method': 'POST',
            'role': 'form',
            'attr': {
                'class': 'ufuturedesk-administration-edit'
            }
        })
    }}
    <fieldset>
        <legend>Datos de personales</legend>
        <div class="form-group">
            <label>
                {{ form_label(teacherForm.name) }}
                {{ form_widget(teacherForm.name, {'attr': {
                    'class': 'form-control'
                }
                }) }}
            </label>
            <label>
                {{ form_label(teacherForm.surname) }}
                {{ form_widget(teacherForm.surname, {'attr': {
                'class': 'form-control'
                }
                }) }}
            </label>
        </div>
        <div class="form-group">
            <label>
                {{ form_label(teacherForm.email) }}
                {{ form_widget(teacherForm.email, {'attr': {
                'class': 'form-control'
                }
                }) }}
            </label>
        </div>
        <div class="form-group">
            <label>
                {{ form_label(teacherForm.address) }}
                {{ form_widget(teacherForm.address, {'attr': {
                'class': 'form-control'
                }
                }) }}
            </label>
        </div>
        <div class="form-group">
            <label>
                {{ form_label(teacherForm.telephone) }}
                {{ form_widget(teacherForm.telephone, {'attr': {
                'class': 'form-control'
                }
                }) }}
            </label>
        </div>
    </fieldset>
{{ form_rest(teacherForm) }}
<input class="btn btn-primary" type="submit" value="Crear" />
{% endblock %}