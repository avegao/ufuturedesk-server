{% extends 'AdminBundle:Default:admin.html.twig' %}

{% block title %}{{ parent() }}Inicio{% endblock %}

{% block article %}
<div class="row">
	<div class="page-header col-md-12">
		<h1><small>uFutureDesk</small></h1>
	</div>
    <div class="row">
        <img class="col-md-2" src="{{ asset('img/logo.png') }}" />
        <ul class="col-md-offset-1 col-md-9">
            <li>Producto: uFutureDesk Server</li>
            <li>Versión: {{ ufuturedesk.version }}</li>
            <li>Canal de distribución: {{ ufuturedesk.channel }}</li>
            <li>Idioma: {{ app.request.locale }} </li>
            <li>Entorno de ejecución: {{ app.environment }}</li>
            <li>Ruta de instalación: {{ documentRoot }}</li>
            <li>Dominio: {{ app.request.host }}</li>
        </ul>
    </div>
</div>
<div class="row">
	<div class="page-header col-md-12">
		<h1><small>{{ school.name }}</small></h1>
	</div>
	{% if school.logoPath is not empty %}
		<img class="col-md-2" src="{{ asset('uploads/school/img/' ~ school.logoPath) }}" witdh="144px" height="144" />
        <ul class="col-md-offset-1 col-md-4">
            <li>Nombre: {{ school.name }}</li>
            <li>Dirección: {{ school.address }}</li>
            <li>Teléfono: <a href="tel:{{ school.telephone }}">{{ school.telephone }}</a></li>
            <li>Fax: <a href="fax:{{ school.fax }}">{{ school.fax }}</a></li>
            <li>Email: <a href="mailto:{{ school.email }}">{{ school.email }}</a></li>
        </ul>
        <div class="col-md-3">
            <a href="{{ path('admin_school_index') }}" class="btn btn-primary"><span class="glyphicon glyphicon-eye-open"></span></a>
        </div>
	{% else %}
        <ul class="col-md-4">
            <li>Nombre: {{ school.name }}</li>
            <li>Dirección: {{ school.address }}</li>
            <li>Teléfono: <a href="tel:{{ school.telephone }}">{{ school.telephone }}</a></li>
            <li>Fax: <a href="fax:{{ school.fax }}">{{ school.fax }}</a></li>
            <li>Email: <a href="mailto:{{ school.email }}">{{ school.email }}</a></li>
        </ul>
        <div class="col-md-3">
            <a href="{{ path('admin_school_index') }}" class="btn btn-primary"><span class="glyphicon glyphicon-eye-open"></span></a>
        </div>
    {% endif %}
</div>
